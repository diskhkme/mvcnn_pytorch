import numpy as np

class RandomRemoval(object):

    def __init__(self, prob):
        self.prob = prob

    def __call__(self, img):
        foreground = (img[:,:,0] > 0) | (img[:,:,1] > 0) | (img[:,:,2] > 2)
        numForground = np.sum(foreground, axis=None) # Sum all
